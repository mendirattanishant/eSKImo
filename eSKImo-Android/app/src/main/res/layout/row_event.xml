<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    android:background="@drawable/onclick">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event name"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Some text describing the event"
        android:id="@+id/tvDesc"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="11/21/2015 12:00 PM"
        android:id="@+id/tvStartTime"
        android:layout_below="@+id/tvDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" - "
        android:id="@+id/tvHyphen"
        android:layout_alignTop="@+id/tvStartTime"
        android:layout_toRightOf="@+id/tvStartTime"
        android:layout_toEndOf="@+id/tvStartTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="11/21/2015 1:00 PM"
        android:id="@+id/tvEndTime"
        android:layout_alignTop="@+id/tvHyphen"
        android:layout_toRightOf="@+id/tvHyphen"
        android:layout_toEndOf="@+id/tvHyphen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Owned"
        android:id="@+id/tvEventType"
        android:layout_below="@+id/tvStartTime"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
